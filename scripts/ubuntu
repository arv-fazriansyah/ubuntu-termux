#!/system/bin/sh

cmd=$1
export bin=/system/bin
export PATH=/usr/bin:/usr/sbin:/bin:/usr/local/bin:/usr/local/sbin:$PATH
export TERM=linux
export HOME=/root
export USER=root
export LOGNAME=root
unset LD_PRELOAD
localbuild="/data/local/tmp/ubuntu"

# Fungsi untuk menghapus instalasi Ubuntu
uninstall() {
  echo "Menghapus instalasi Ubuntu..."
  
  if [ -d "$localbuild" ]; then
    # Hapus direktori instalasi Ubuntu dengan hak superuser
    su -c "rm -rf $localbuild"
    
    if [ -d "$localbuild" ]; then
      echo "Gagal menghapus instalasi Ubuntu. Silakan restart perangkat dan coba lagi."
    else
      echo "Instalasi Ubuntu telah berhasil dihapus."
      rm "$PREFIX/bin/ubuntu" 2>/dev/null
    fi
  else
    echo "Instalasi Ubuntu tidak ditemukan."
    rm "$PREFIX/bin/ubuntu" 2>/dev/null
  fi
}

# Periksa apakah pengguna adalah root atau bukan
if [ "$EUID" -ne 0 ]; then
  # Cek argumen
  if [ $# -eq 1 ] && [ "$1" = "--uninstall" ]; then
    uninstall
  else
    echo "Anda harus menjalankan skrip ini dengan hak superuser (root) untuk menghapus instalasi Ubuntu."
  fi
else
  # Pengguna adalah root, jalankan fungsi uninstall
  uninstall
fi
